{
  "compilerOptions": {
    "declaration": false,
    "rootDirs": ["src", "test"],
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2015"],
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
